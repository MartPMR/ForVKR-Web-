
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/ErrorStyles.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    <title>@ViewBag.Title</title>
    <style>
        .navbar-right {
            float: right !important;
            margin-right: 15px;
            margin-left: 15px;
        }
    </style>
</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">Библиотека книг</a>
        </div>
        <div class="navbar-collapse collapse">
            @Html.Partial("_LoginPartial")
            <form id="frmSearch" class="navbar-form navbar-right" action="/Books/List" method="post">
                <div class="input-group">
                    <input type="text" name="bookFilter" class="form-control" placeholder="Найти книгу...">
                    <a title="начать поиск" class="input-group-addon" href="javascript:frmSearch.submit()">
                        <span class="glyphicon glyphicon-search"></span>
                    </a>
                </div>
            </form>
            @if (Request.IsAuthenticated)
            {
                @Html.Action("Summary", "Cart")
            }
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div id="genres" class="col-sm-4 col-md-4 hidden-xs">
                @Html.Action("Menu", "Nav")
            </div>
            <div class="col-xs-12 col-sm-8 col-md-8">
                <div class="visible-xs">
                    @Html.Action("Menu", "Nav", new { horizontalNav = true })
                </div>
                @RenderBody()
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>